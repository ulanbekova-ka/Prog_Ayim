<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#9F7B5B">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/frg2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is Fragment 2"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/frg2_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/frg2_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frg2_txt"
        app:layout_constraintBottom_toTopOf="@id/frg2_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/frg2_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND TEXT TO FRAGMENT 1"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/frg2_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>